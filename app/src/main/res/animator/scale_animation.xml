<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="sequentially">
    <set>
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="300"
            android:valueTo="0.9"
            />
        <objectAnimator
            android:propertyName="scaleY"
            android:duration="300"
            android:valueTo="0.9"
            />
    </set>

    <set>
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="300"
            android:valueTo="1.0"
            />
        <objectAnimator
            android:propertyName="scaleY"
            android:duration="300"
            android:valueTo="1.0"
            />
    </set>

</set>